#!/bin/bash

function display {
	echo -e "\n$1\n"
}

function init {
	display 'â°  Install & initiate dependencies'
	.scripts/homebrew.sh init
	brew install stow
}

function installApps {
	display 'ğŸ±  Installing applications'
	.scripts/homebrew.sh
}

function setupMacOsPref {
	display 'ğŸ”§  Tweaking macOS preferences'
	.scripts/macos.sh
}

function loginItems {
	display 'âœ¨  Configure login items'
	.scripts/login-items.sh
}

function stowFiles {
	display 'ğŸ—„  Stowing your .files to $HOME'
	ls -d */ | xargs stow -vv -t $HOME
}

function unstashSecrets {
	display 'ğŸ”  Unstashing secrets from 1Password'
	display 'ğŸ”  Press enter once 1Password is configured'
	read -n 1
	.scripts/op-secrets.sh unstash
}

function applyGitIgnore {
	display 'ğŸ™…  Applying ~/.gitignore globally'
	git config core.excludesfile $HOME/.gitignore
}

function scheduleCron {
	display 'ğŸ“…  Scheduling crontab tasks'
	crontab .scripts/cron.txt
}

function restartComputer {
	display 'ğŸ–¥  All done! You may need to restart your computer'
	.scripts/restart.sh
}

function runAll {
	init
	stowFiles
	installApps
	setupMacOsPref
	loginItems
	unstashSecrets
	applyGitIgnore
	scheduleCron
	restartComputer
}

function menu {
	echo -e "usage:"
	echo -e "	./up apps - install apps"
	echo -e "	./up ssh-key - set up ssh keys"
	echo -e "	./up stow - stow files"
	echo -e "	./up all - run all commands"
}

cat banner

case $1 in
apps)
	installApps
	;;
ssh-key)
	generateSshKey
	;;
stow)
	stowFiles
	;;
all)
	runAll
	;;
help)
	menu
	;;
*)
	menu
	;;
esac
